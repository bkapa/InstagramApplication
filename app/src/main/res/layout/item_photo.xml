<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:minHeight="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCaption"
        android:textSize="20sp"
        android:minLines="1"
        android:ellipsize="end"
        android:maxLines="3"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvUserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvCaption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvLikes"
        android:layout_toEndOf="@+id/tvCaption"
        android:layout_below="@+id/tvCaption"
        android:layout_toRightOf="@+id/tvCaption" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvLikes"
        android:src="@drawable/likes"
        android:layout_alignBottom="@+id/tvUserName"
        android:layout_below="@+id/tvCaption"
        android:layout_toLeftOf="@+id/tvLikes"
        android:adjustViewBounds="true"
        android:background="#fafbff"
        android:maxWidth="0.01dp"
        android:foregroundGravity="left"
        android:outlineProvider="none" />

</RelativeLayout>